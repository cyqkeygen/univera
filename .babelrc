{
  "presets": ["es2015", "stage-0", "react"],
  "plugins": [
    "transform-runtime",
    "add-module-exports",
    [
      "babel-plugin-module-alias", [
        {"src": "./common", "expose": "common"},
        {"src": "./config", "expose": "config"},
        {"src": "./node_modules/isomorphic-fetch", "expose": "fetch"}
      ]
    ]
  ],
  "env": {
    "test": {
      "sourceMaps": "inline"
    },
    "production": {
      "presets": ["react-optimize"]
    }
  }
}
